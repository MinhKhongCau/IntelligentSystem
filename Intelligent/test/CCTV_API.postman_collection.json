							"raw": "http://localhost:5001/health",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "5001",
							"path": [
								"health"
							]
						},
						"description": "Check if service is running"
					},
					"response": []
				},
				{
					"name": "Get Stream Status",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "http://localhost:5001/api/status",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "5001",
							"path": [
								"api",
								"status"
							]
						},
						"description": "Get default stream status"
					},
					"response": []
